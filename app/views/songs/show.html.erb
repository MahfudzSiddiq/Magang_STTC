<div class="mx-auto md:w-2/3 w-full flex flex-col items-center justify-center">
  <div class="mx-auto bg-white rounded-lg shadow-lg p-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @song %>

    <div class="flex flex-row justify-between mt-4">
      <%= link_to "Edit this song", edit_song_path(@song), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-gray-200" %>
      <%= link_to "Back to songs", songs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-gray-200" %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this song", @song, method: :delete, class: "rounded-lg py-3 px-5 bg-red-500 font-medium hover:bg-red-700 text-white" %>
      </div>
    </div>
  </div>
</div>
